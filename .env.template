# Income Estimator ML Environment Variables Template
# Copy this file to .env and update the values as needed

# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# API Configuration
API__HOST=0.0.0.0
API__PORT=8000
API__RELOAD=false
API__WORKERS=1
API__LOG_LEVEL=info

# CORS Configuration
API__CORS_ORIGINS=["*"]
API__CORS_METHODS=["*"]
API__CORS_HEADERS=["*"]

# Rate Limiting
API__RATE_LIMIT_REQUESTS=100
API__RATE_LIMIT_WINDOW=60

# Data Configuration
DATA__RAW_DATA_PATH=data/raw
DATA__PROCESSED_DATA_PATH=data/processed
DATA__EXTERNAL_DATA_PATH=data/external
DATA__TRAIN_TEST_SPLIT=0.2
DATA__RANDOM_STATE=42
DATA__VALIDATION_SPLIT=0.2

# Model Configuration
MODEL__ALGORITHMS=["random_forest","gradient_boosting","logistic_regression","svm","neural_network"]
MODEL__HYPERPARAMETER_TUNING=true
MODEL__TUNING_METHOD=optuna
MODEL__N_TRIALS=100
MODEL__CV_FOLDS=5
MODEL__SCORING_METRIC=accuracy
MODEL__MODEL_REGISTRY_PATH=models

# MLflow Configuration
MODEL__MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MODEL__MLFLOW_EXPERIMENT_NAME=income_estimator

# Logging Configuration
LOGGING__LEVEL=INFO
LOGGING__FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}"
LOGGING__ROTATION="1 day"
LOGGING__RETENTION="30 days"
LOGGING__LOG_FILE=logs/app.log
LOGGING__ENABLE_JSON_LOGS=false

# Monitoring Configuration
MONITORING__ENABLE_METRICS=true
MONITORING__METRICS_PORT=9090
MONITORING__HEALTH_CHECK_INTERVAL=30
MONITORING__MODEL_DRIFT_THRESHOLD=0.1
MONITORING__DATA_DRIFT_THRESHOLD=0.1

# Security Configuration
SECURITY__API_KEY_REQUIRED=false
SECURITY__RATE_LIMITING_ENABLED=true
SECURITY__CORS_ENABLED=true
SECURITY__HTTPS_ONLY=false

# Cache Configuration
CACHE__ENABLED=false
CACHE__BACKEND=memory
CACHE__TTL=3600
CACHE__MAX_SIZE=1000

# Database Configuration (Optional)
DATABASE__ENABLED=false
DATABASE__URL=postgresql://postgres:postgres@localhost:5432/income_estimator
DATABASE__POOL_SIZE=5
DATABASE__MAX_OVERFLOW=10

# Redis Configuration (Optional)
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=

# External Services (Optional)
EXTERNAL__WEATHER_API_KEY=
EXTERNAL__GEOCODING_API_KEY=

# AWS Configuration (Optional)
AWS__ACCESS_KEY_ID=
AWS__SECRET_ACCESS_KEY=
AWS__REGION=us-east-1
AWS__S3_BUCKET=

# Google Cloud Configuration (Optional)
GOOGLE__PROJECT_ID=
GOOGLE__CREDENTIALS_PATH=

# Azure Configuration (Optional)
AZURE__SUBSCRIPTION_ID=
AZURE__RESOURCE_GROUP=
AZURE__STORAGE_ACCOUNT=

# Monitoring and Alerting (Optional)
SLACK__WEBHOOK_URL=
EMAIL__SMTP_SERVER=
EMAIL__SMTP_PORT=587
EMAIL__USERNAME=
EMAIL__PASSWORD=
EMAIL__FROM_ADDRESS=

# Development Tools
DEV__JUPYTER_TOKEN=income-estimator
DEV__JUPYTER_PASSWORD=

